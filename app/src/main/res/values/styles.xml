<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/transparent</item>
    </style>


    <style name="CustomTheme" parent="AppTheme">
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorPrimaryDark">@color/maindarkcolor</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="head_default">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_100px</item>
    </style>

    <style name="message_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:background">#efddd7</item>
    </style>

    <style name="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">tagClick</item>
        <item name="android:padding">10dp</item>
    </style>



    <style name="style_personal_my">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/te_16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>
   <style name="tv_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/te_16</item>
    </style>

    <style name="tv_14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/te_14</item>
    </style>


    <style name="tv_13">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/te_13</item>
    </style>

    <style name="tv_12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/te_12</item>
    </style>


    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titile</item>
    </style>
    <style name="RedTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="RedTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
