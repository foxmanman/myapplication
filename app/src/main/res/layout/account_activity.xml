<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5f7f7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_account_close"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_gravity="right"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:src="@mipmap/abs__ic_clear_search_api_holo_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_weight="1.0"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:src="@mipmap/pingpp_shopping" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功下单"
                android:textColor="@color/black"
                android:textSize="20.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:layout_width="75.0dip"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="20.0dip"
                android:text="订单号"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_account_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="18.0sp"
                android:typeface="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/lable_order_total_money"
                android:layout_width="75.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="订单金额"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_account_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lable_order_total_money"
                android:textSize="18.0sp"
                android:typeface="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:layout_width="75.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="top"
                android:layout_marginLeft="20.0dip"
                android:text="商品"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <ListView
                android:id="@+id/lv_account_bill_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@color/transparent"
                android:divider="@null"
                android:listSelector="@color/transparent"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="10.0dip">

            <TextView
                android:id="@+id/lable_order_total_money"
                android:layout_width="75.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:text="运费"
                android:textColor="@color/black"
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_account_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lable_order_total_money"
                android:textSize="18.0sp"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="20.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_chose_pay_alipay"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/pingpp_common_pay_channel_btton"
            android:gravity="center">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:src="@mipmap/pingpp_alipay" />

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="支付宝"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chose_pay_we"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/pingpp_common_pay_channel_btton"
            android:gravity="center">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:src="@mipmap/pingpp_wechat" />

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="微信支付"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bfbButton"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/pingpp_common_pay_channel_btton"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:src="@mipmap/pingpp_baidu" />

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="百度支付"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chose_pay_upmp"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/pingpp_common_pay_channel_btton"
            android:gravity="center">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip"
                android:src="@mipmap/pingpp_unionpay" />

            <TextView
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="银联"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>