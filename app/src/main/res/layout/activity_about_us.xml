<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/maincolor">

        <TextView
            style="@style/tv_title"
            android:layout_width="fill_parent"
            android:text="关于我们" />

        <RelativeLayout
            android:id="@+id/iv_aboutus_back"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:src="@mipmap/backcall" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/bg_gray" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180.0dip"
        android:orientation="vertical"
        android:paddingBottom="10.0dip">

        <ImageView
            android:id="@+id/iv_aboutus_header"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_aboutus_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_aboutus_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="19.0dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_aboutus_score"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/xml_info_border"
            android:paddingLeft="15.0dip"
            android:paddingRight="8.0dip">

            <TextView
                style="@style/style_personal_my"
                android:text="鼓励评分" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutus_protocol"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/xml_info_border1"
            android:paddingLeft="15.0dip"
            android:paddingRight="8.0dip">

            <TextView
                style="@style/style_personal_my"
                android:text="用户协议" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutus_advice"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/xml_info_border1"
            android:paddingLeft="15.0dip"
            android:paddingRight="8.0dip">

            <TextView
                android:id="@+id/tv_about_us_advice"
                style="@style/style_personal_my"
                android:text="意见反馈" />

            <TextView
                android:id="@+id/tv_about_us_chat_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_about_us_advice"
                android:background="@mipmap/bg_msg_tips"
                android:gravity="center"
                android:textColor="@*android:color/white"
                android:textSize="10.0dip"
                android:visibility="gone" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>