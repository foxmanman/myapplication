<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffcccccc"
        android:gravity="right|center"
        android:visibility="gone">

        <Button
            android:id="@+id/id_remove"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4.0dip"
            android:background="@color/red"
            android:text="Delete"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="97.0dip"
        android:layout_marginTop="5.0dip">

        <RelativeLayout
            android:id="@+id/rl_already_done_icon_contain"
            android:layout_width="105.0dip"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/iv_already_done_icon"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10.0dip"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_image_default" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/rl_already_done_icon_contain">

            <TextView
                android:id="@+id/tv_already_done_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_already_done_goods_stuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_already_done_goods_name"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_already_done_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_already_done_goods_stuff"
                android:layout_marginTop="5.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_already_done_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_already_done_goods_stuff"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="5.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_already_done_goods_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_already_done_goods_count"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@color/grey" />
</LinearLayout>